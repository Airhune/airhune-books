---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import "../styles/global.css";

import { ClientRouter } from "astro:transitions";

interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Un espacio web con recomendaciones de libros" />
		<meta name="viewport" content="width=device-width" />
		<script defer src="https://cdn.jsdelivr.net/npm/@alpinejs/collapse@3.x.x/dist/cdn.min.js"></script>
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body class=" bg-body text-body font-body">
		<section class="bg-gradient-to-t from-[#FC9EB4] via-pink-700 to-[#210A10] pb-50">
			<Header />
			<slot />
		</section>
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: 'Florensa', sans-serif;
	}

	body{
		font-family: 'Montserrat', sans-serif;
	}

	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		color: #fff;
	}

</style>
