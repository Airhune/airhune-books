---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const books = await getCollection('books');
---

<Layout title='MyBooks, mis libros favoritos'>
	<main>
		<h1 class="text-center text-7xl font-extrabold">My <span class="block">Books</span></h1>

		<section aria-label="Libros recomendados" class="grid gap-4 mt-8">
			<div class="px-4 mx-auto max-w-screen-xl">
				<div class="grid gap-6 md:grid-cols-2">
					{books.map((book: any) => (
						<article class="p-4 rounded-lg">
							<a href={`/libro/${book.data.slug}`} class="block mb-4 transition hover:scale-105">
						  		<img src={book.data.img} alt={book.data.title} class="w-full h-50 rounded object-cover" />
							</a>
							<h2 class="text-2xl font-bold">{book.data.title}</h2>
							<p class="text-gray-300">{book.data.author}</p>
							<p>{book.data.description}</p>
							<p>Tiempo de lectura: {book.data.readtime} minutos</p>
							<div class="flex gap-4 mt-2">
								<a href={book.data.buy.spain} class="text-blue-400">Comprar (Espa√±a)</a>
								<a href={book.data.buy.usa} class="text-blue-400">Comprar (USA)</a>
							</div>
						</article>
					  ))}
				</div>
			</div>
		</section>
	</main>
</Layout>

